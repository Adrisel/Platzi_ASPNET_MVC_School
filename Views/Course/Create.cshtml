@model Course

@{
    ViewData["Title"] = "Create a course";
    Layout = "_SimpleLayout";
}
<h1>@ViewData["Title"]</h1>


<div asp-validation-summary="All"></div>
<form method="POST">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name">
    </div>
    <div>
        <label asp-for="Address"></label>
        <input asp-for="Address">
    </div>
    <div>
        <label asp-for="TurnType"></label>
        @Html.DropDownList("Jornada",
                             Html.GetEnumSelectList<TurnType>(),
                            "Select a Turn",
                            new {@class = "form-control"});
    </div>

    <input type="submit">
</form>



<p>
    @ViewBag.Date
</p>